@model CabDriverViewModel

@{
    ViewData["Title"] = "DriverRegister";
}


<h1>DriverRegister</h1>


<h4>DriverViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DriverRegister">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LicenseNumber" class="control-label"></label>
                <input asp-for="LicenseNumber" class="form-control" />
                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CabNumber" class="control-label"></label>
                <input asp-for="CabNumber" class="form-control" />
                <span asp-validation-for="CabNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CabName" class="control-label"></label>
                <input asp-for="CabName" class="form-control" />
                <span asp-validation-for="CabName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CabType"></label>
                <select asp-for="CabType" asp-items="@Html.GetEnumSelectList<Types>()" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
