    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CabApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CabApp.styles.css" asp-append-version="true" />
</head>
<style>
    .logo{
        width: 60px;
        height: 60px;
        border-radius:50px;
    }
    .nav{
        background-color: #01010f;
    }

</style>
<body>
    <header>
        <nav class=" nav navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img  class ="logo" src="/assets/Logo.png" />

                <b><i><a style="color:white" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CoDriver</a></i></b>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Account" asp-controller="Home" asp-action="BookNow">BookNow</a>
                        </li>
                        <li>
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Account" asp-controller="Home" asp-action="Logout">Log Out</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Account" asp-controller="Home" asp-action="Index">Profile</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Account" asp-controller="Home" asp-action="Login">Log In</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Account" asp-controller="Home" asp-action="Register">Register</a>
                        </li>
                    }
                           
                       
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CabApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
